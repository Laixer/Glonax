[Unit]
Description=Glonax Heavy Machinery Controller
StartLimitIntervalSec=5
StartLimitBurst=5
Wants=sys-subsystem-net-devices-can0.device
After=sys-subsystem-net-devices-can0.device

[Service]
WorkingDirectory=/var/lib/glonax
Restart=always
RestartSec=2
Nice=-5
ExecStart=/usr/local/bin/glonax-execd --daemon --workers 8
PrivateTmp=true

[Install]
WantedBy=multi-user.target

